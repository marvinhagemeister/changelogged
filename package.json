{
  "name": "changelogged",
  "version": "0.1.1",
  "description": "Generate a release changelog",
  "main": "index.js",
  "bin": {
    "changelogged": "./dist/index.js"
  },
  "scripts": {
    "test": "mocha -r ts-node/register --extension ts,tsx src/**.test.ts",
    "build": "rm -rf dist/ && tsc && chmod a+x dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "author": "Marvin Hagemeister <hello@marvinh.dev>",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^8.2.1",
    "@types/mri": "^1.1.0",
    "@types/node": "^14.14.32",
    "@types/readline-sync": "^1.4.3",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.1",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "httpie": "^1.1.2",
    "kleur": "^4.1.4",
    "mri": "^1.1.6",
    "readline-sync": "^1.4.10"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,yml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "useTabs": false,
    "arrowParens": "avoid",
    "trailingComma": "none"
  }
}
